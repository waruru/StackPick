<%= form_with(model: post, class: "mt-2") do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :url, class: "block" %>
    <%= form.text_field :url, class: "form-text-field" %>
  </div>

  <div>
    <%= form.label :title, class: "block" %>
    <%= form.text_field :title, class: "form-text-field" %>
  </div>

  <div>
    <%= form.label :description, class: "block" %>
    <%= form.text_area :description, class: "form-text-field" %>
  </div>

  <div class="mt-2 text-center">
    <% if controller.action_name.to_sym == :new %>
      <%= form.submit "投稿", class: "btn-submit w-full font-bold" %>
    <% elsif controller.action_name.to_sym == :edit %>
      <%= form.submit "更新", class: "btn-submit w-full font-bold" %>
    <% end %>
  </div>
<% end %>
