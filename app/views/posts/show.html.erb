<div class="grid grid-cols-2 lg:grid-cols-3 gap-4 mt-2 md:mt-4 lg:mt-8">
  <div class="col-span-2">
    <div>
      <h3 class="px-2 pb-1 text-4xl font-bold border-b-4 border-gray-400 inline-block"><%= @post.title %></h3>
    </div>

    <div class="mt-2 lg:mt-4 flex gap-2">
      <% @post.tags.each do |tag| %>
        <%= render tag %>
      <% end %>
    </div>

    <div class="mt-2 bg-slate-400">
      <%= image_tag @post.ogp_url, class:"mx-auto" %>
    </div>

    <div class="mt-2 lg:mt-4">
      <strong class="block pl-4 border-b-2">説明</strong>
      <p><%= @post.description %></p>
    </div>
  </div>

  <div class="invisible lg:visible col-span-1 px-6 border-l-4">
    <div class="flex flex-col overflow-y-auto h-screen gap-4">
      <% @posts.each do |post| %>
        <%= render post %>
      <% end %>
    </div>
  </div>
</div>

<div>
  <% if @post.user == current_user %>
    <%= link_to "投稿内容を編集", edit_post_path(@post) %> |
    <%= link_to "投稿を削除", @post, method: :delete %> <br>
  <% end %>

  <%= link_to "投稿一覧に戻る", posts_path %>
</div>
