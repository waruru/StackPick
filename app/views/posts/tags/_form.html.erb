<%= form_with(model: tag, url: new_posts_tag_path, class: "contents") do |form| %>
  <% if tag.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(posts_tag.errors.count, "error") %> prohibited this posts_tag from being saved:</h2>

      <ul>
        <% tag.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block" %>
    <%= form.text_field :name, class: "appearance-none block w-full bg-white text-gray-700 border border-gray-200 rounded py-2 px-4 leading-tight focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500", placeholder: "Enter some tags" %>
  </div>

  <div class="flex mt-1">
    <%= form.submit class: "btn btn-sm" %>
    <%= link_to 'キャンセル', new_post_path, class: "btn btn-link btn-sm text-neutral" %>
  </div>
<% end %>
