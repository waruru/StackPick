<div id="<%= dom_id posts_tag %>">
  <% if action_name != "show" %>
    <%= link_to "Show this tag", posts_tag, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this tag', edit_posts_tag_path(posts_tag), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
