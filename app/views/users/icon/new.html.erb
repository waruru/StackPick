<%= turbo_frame_tag "modal" do %>
  <div class="fixed z-50 top-0 bg-gray-600 bg-opacity-50" data-controller="turbo-modal">
    <div class="w-screen h-screen grid grid-cols-2 justify-center items-center">
      <div class="bg-white bg-opacity-100 border rounded-xl p-8">
        <h1 class="font-bold text-4xl">アイコンアップロード</h1>
        <%= render 'form', user: @user %>
        <%= button_tag "キャンセル", data: { action: "turbo-modal#hideModal" }, type: "button" %>
      </div>
    </div>
  </div>
<% end %>
